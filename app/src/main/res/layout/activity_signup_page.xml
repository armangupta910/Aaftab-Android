<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color4"
    tools:context=".loginPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/goBackImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/goback"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:text="EVENTSPHERE"
        android:fontFamily="@font/boldfont"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:layout_height="300dp"
        >
        <ImageView
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/beginimagebelow"/>

        <ImageView
            android:layout_marginLeft="0dp"
            android:layout_marginRight="00dp"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/optionpageimage"/>


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:fontFamily="@font/font"
            android:textSize="13dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textStyle="bold"/>

        <EditText
            android:background="@drawable/roundbuttonbglogin"
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:hint="User Name"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="60dp"
            android:textSize="13dp"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="15dp"
            />

        <TextView
            android:fontFamily="@font/font"
            android:textSize="13dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textStyle="bold"/>

            <EditText
                android:background="@drawable/roundbuttonbglogin"
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:hint="username@gmail.com"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="60dp"
                android:textSize="13dp"
                android:layout_marginRight="60dp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="15dp"
                />
        <TextView
            android:fontFamily="@font/font"
            android:textSize="13dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Password"
            android:textStyle="bold"/>

            <EditText
                android:background="@drawable/roundbuttonbglogin"
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:hint="Password"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="60dp"
                android:textSize="13dp"
                android:layout_marginRight="60dp"
                android:layout_marginBottom="20dp"
                android:inputType="textPassword"
                android:drawableEnd="@drawable/show_password_resized"
                android:paddingRight="10dp"
                android:paddingLeft="15dp"
                />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/register"
            android:fontFamily="@font/font"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Register"
            android:background="@drawable/roundbuttonbgregister"
            android:textColor="@color/white"
            android:layout_marginTop="15dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Or Continue With"
            android:textAlignment="center"
            android:textStyle="normal"
            android:fontFamily="@font/font"
            android:textColor="@color/black"
            android:layout_marginTop="20dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/googleSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="8dp">

            <ImageView
                android:layout_marginRight="0dp"
                android:layout_width="45dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="7.5dp"
                android:paddingBottom="7.5dp"

                android:layout_height="35dp"
                android:src="@drawable/google"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="@font/font"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Already have an account?"/>

            <TextView
                android:fontFamily="@font/font"
                android:id="@+id/gotoSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text=" Sign In"/>



        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

    </ScrollView>

</LinearLayout>