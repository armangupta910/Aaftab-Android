<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".getStarted">

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="60dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:text="Welcome back,"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/boldfont"
                android:text="NAME"/>

        </LinearLayout>
        <ImageView
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent"
            android:src="@drawable/qr"/>
        <!--                <ImageView-->
        <!--                    android:layout_weight="0.3"-->
        <!--                    android:layout_width="0dp"-->
        <!--                    android:layout_marginLeft="5dp"-->
        <!--                    android:layout_height="match_parent"-->
        <!--                    android:src="@drawable/personimagenew"/>-->
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>




    <androidx.cardview.widget.CardView
        android:layout_weight="0.1"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        app:cardElevation="5dp"
        android:layout_margin="0dp"
        app:cardBackgroundColor="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bottomnavbarbg">

            <ImageView
                android:id="@+id/tab1img"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="0.8"
                android:src="@drawable/tab1white"
                android:visibility="gone" />

            <androidx.cardview.widget.CardView
                android:id="@+id/tab1card"
                android:layout_width="0dp"
                android:visibility="visible"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_weight="0.8"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/home"
                        android:layout_weight="1"/>
                    <TextView
                        android:autoSizeTextType="uniform"
                        android:maxLines="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Home"
                        android:layout_weight="2"
                        android:autoSizeMinTextSize="10sp"
                        android:autoSizeMaxTextSize="15sp"
                        android:autoSizeStepGranularity="1sp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="@color/black"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/tab2img"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:visibility="visible"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/eventwhite"
                android:layout_marginLeft="5dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/tab2card"
                android:layout_width="0dp"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_weight="0.8"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="25dp">

                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/eventblack"
                        android:layout_weight="1"/>
                    <TextView
                        android:autoSizeTextType="uniform"
                        android:maxLines="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Events"
                        android:layout_weight="2"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|center_horizontal"
                        android:autoSizeMinTextSize="10sp"
                        android:autoSizeMaxTextSize="15sp"
                        android:autoSizeStepGranularity="1sp"
                        android:textColor="@color/black"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/tab3img"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:visibility="visible"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/sponsorwhite"
                android:layout_marginLeft="5dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/tab3card"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:visibility="gone"
                android:layout_weight="0.8"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/sponsorblack"
                        android:layout_weight="1"/>
                    <TextView
                        android:autoSizeTextType="uniform"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Sponsors"
                        android:layout_weight="2"
                        android:maxLines="1"
                        android:autoSizeMinTextSize="10sp"
                        android:autoSizeMaxTextSize="15sp"
                        android:autoSizeStepGranularity="1sp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="@color/black"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/tab4img"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:visibility="visible"
                android:src="@drawable/tab4white"
                android:layout_marginLeft="5dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/tab4card"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_weight="0.8"
                android:visibility="gone"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="12dp"
                app:cardCornerRadius="25dp">

                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/personblack"
                        android:layout_weight="1"/>
                    <TextView
                        android:autoSizeTextType="uniform"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Profile"
                        android:maxLines="1"
                        android:autoSizeMinTextSize="10sp"
                        android:autoSizeMaxTextSize="15sp"
                        android:autoSizeStepGranularity="1sp"
                        android:layout_weight="2"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="@color/black"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>